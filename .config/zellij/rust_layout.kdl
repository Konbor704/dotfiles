layout {

  pane edit="src/main.rs"
  floating_panes {
    cargo {
      args "run"
      x -2 
      y "0%"
      width "35%"
      height "50%"
    }
  }

  pane size=1 borderless=true {
    plugin location="zellij:compact-bar"
  }

  pane_template name="cargo"{
    command "cargo"
    start_suspended true
  }
}
